<security>

  <!-- Define if SSL is enabled for a resource and its methods. -->
  <!-- When not defined, SSL is disabled for the resource by default. -->
  <!-- An optional "method" attribute may be set for each sslConfig element with value to be GET, POST, PUT, or DELETE. -->
  <sslConfig resource="store/{storeId}/giftreward" enabled="true"/> 
  <sslConfig resource="store/{storeId}/cart/@self/internationalprecheckout" enabled="true"/>
  <sslConfig resource="store/{storeId}/cart/paypalRedirect" enabled="true"/>
  <sslConfig resource="store/{storeId}/cart/@self/paypalCallback" enabled="true"/>
</security>